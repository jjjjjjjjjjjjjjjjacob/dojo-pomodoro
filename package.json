{
  "name": "dojo-pomodoro",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:deploy": "turbo run deploy",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:web": "cd apps/web && bun test",
    "test:convex": "cd apps/convex && bun test"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16.0.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "turbo": "^2.6.3"
  },
  "overrides": {
    "convex": "1.30.0"
  },
  "packageManager": "bun@1.2.18"
}
