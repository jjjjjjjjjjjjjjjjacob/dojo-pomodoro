# Clerk Secrets
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=next-clerk-publishable-key
CLERK_SECRET_KEY=clerk-secret-key

# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=convex-deployment

NEXT_PUBLIC_CONVEX_URL=next-public-convex-url

# Required by Convex functions that validate passwords
FINGERPRINT_SECRET=replace-with-long-random-string

# Encryption key for contact info (base64 of 32 random bytes)
ENCRYPTION_KEY=base64-encoded-32-byte-key

# Base URL used to generate redeem links in notifications
APP_BASE_URL=http://localhost:2345

# Twilio Config
TWILIO_ACCOUNT_SID=your-twilio-account-id
TWILIO_AUTH_TOKEN=your-twilio-account-id
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_MESSAGING_SERVICE_SID=your-twilio-service-id
